<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/newfriends_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/call_icon3" />

    <Button
        android:id="@+id/newfriends_addfriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/newfriends_phone"
        android:layout_marginRight="5dp"
        android:background="@drawable/button_shape_share"
        android:text="@string/add"
		android:textSize="12sp"        
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/newfriends_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/newfriends_icon"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/newfriends_icon"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/newfriends_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/newfriends_phone"
        android:layout_alignLeft="@+id/newfriends_phone"
        android:textColor="@color/black"
        android:textSize="16sp" />

</RelativeLayout>