<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/contacts_portrait"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/call_icon3" />

    <TextView
        android:id="@+id/contacts_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/contacts_portrait"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/contacts_portrait"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/contacts_mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/contacts_portrait"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/contacts_portrait"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="@color/color_6" />

    <TextView
        android:id="@+id/rcs_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/contacts_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/contacts_name"
        android:textColor="@color/LightSeaGreen2"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/contacts_usertype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="@color/LightSeaGreen"
        android:textSize="12sp" />

</RelativeLayout>